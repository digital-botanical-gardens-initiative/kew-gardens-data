# Copy to .env and edit as needed
# cp .env.example .env

# --- gnverifier -------------------------------------------------------------
DATASOURCE_ID=1

# --- Output placement -------------------------------------------------------
OUTPUT_DIR=./data/output
# Optional final output filename; if empty uses <input_stem>-gnverified-col.csv
OUTPUT_FILENAME=kew-species-list-gnverified-col-before-2015.csv

# --- Intermediates ----------------------------------------------------------
# 0 = delete intermediate files; 1 = keep them
KEEP_INTERMEDIATE=0

# --- Join behavior ----------------------------------------------------------
# 1 = case-insensitive left join; 0 = case-sensitive
JOIN_IGNORE_CASE=0

# --- Unified date handling --------------------------------------------------
# Which column carries the date info to filter on:
DATE_SOURCE_COL='Accession Date'
# Its format for xan: "%Y" for year-only; or e.g. "%d-%m-%Y"
DATE_SOURCE_FORMAT="%Y"
# Keep only rows strictly BEFORE this ISO date (YYYY-MM-DD). Empty = skip.
FILTER_BEFORE_DATE=2015-01-01

